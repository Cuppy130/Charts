<ActorFrame InitCommand="%function(self)
	
	sw = SCREEN_WIDTH;
	sh = SCREEN_HEIGHT;
	scx = sw/2
	scy = sh/2
	
end"> <children>

	
	<Layer File="ligma" OnCommand="xy,scx,scy;blend,add;diffusealpha,.2;customtexturerect,0,0,2,4;zoomy,16;zoomx,-8;texcoordvelocity,0,.25" />
	
	<Layer File="ligma" OnCommand="xy,scx,scy;blend,add;diffusealpha,.4;customtexturerect,0,0,4,4;zoomy,8;zoomx,8;texcoordvelocity,0,1" />
	
	<Layer File="beams" OnCommand="xy,scx-200,scy;blend,add;diffusealpha,.6;customtexturerect,0,0,1,4;zoomy,6;zoomx,.8;texcoordvelocity,0,4" />
	<Layer File="beams" OnCommand="xy,scx+200,scy;blend,add;diffusealpha,.6;customtexturerect,0,.5,1,4.5;basezoomx,-1;zoomy,6;zoomx,.8;texcoordvelocity,0,4" />

	<Layer File="target" OnCommand="xy,scx,scy-136;halign,0;customtexturerect,0,0,2,1;zoomx,2;faderight,.1;cropright,.4;texcoordvelocity,-.5,0;" />
	<Layer File="target" OnCommand="xy,scx,scy-136;halign,1;customtexturerect,0,0,2,1;zoomx,2;fadeleft,.1;cropleft,.4;texcoordvelocity,.5,0;" />
	
	
	<Layer
		Var="dop_bg0"
		File="background"
		OnCommand="x,SCREEN_CENTER_X;y,SCREEN_CENTER_Y;ZoomToWidth,SCREEN_WIDTH;ZoomToHeight,SCREEN_HEIGHT;diffuse,0,0,0,1"
	/>
	<Layer
		Var="dop_bg1"
		File="itg"
		OnCommand="x,SCREEN_CENTER_X;y,SCREEN_CENTER_Y;ZoomToWidth,SCREEN_WIDTH;ZoomToHeight,SCREEN_HEIGHT;diffuse,.5,.5,.5,0"
	/>
	
	<Layer
		Var="dop_bg2"
		File="_mind.sprite"
		OnCommand="stretchto,-2,-2,sw+2,sh+2;diffuse,.5,.5,.5,0;"
	/>

</children> </ActorFrame>